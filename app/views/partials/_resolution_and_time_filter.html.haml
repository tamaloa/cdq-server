.row.filter
  = form_tag('/filter/set', {:class => 'form-inline'}) do
    .form-group
      = label_tag 'resolution'
      = select_tag( 'filter[resolution]', options_for_select(Resolution.defaults.map(&:to_s), session[:resolution]),
                  {:class => 'form-control input-sm'} )
    .form-group
      = label_tag 'from'
      = date_select 'filter[time_from]', 'time_from', {:default => session[:time_from]},{:class => 'form-control input-sm'}
    .form-group
      = label_tag 'till'
      = date_select 'filter[time_till]', 'time_till', {:default => session[:time_till]},{:class => 'form-control input-sm'}
    = submit_tag 'change filter', {:class => 'btn btn-default'}