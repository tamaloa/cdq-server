= form_for @subjective_assessment_survey, :html => {:class => 'subjective-feedback'} do |f|
  - if @subjective_assessment_survey.errors.any?
    #error_explanation
      %h2= "#{pluralize(@subjective_assessment_survey.errors.count, "error")} prohibited this subjective_assessment from being saved:"
      %ul
        - @subjective_assessment_survey.errors.full_messages.each do |msg|
          %li= msg

  - @subjective_assessment_survey.subjective_assessments.each do |assessment|
    = f.fields_for :subjective_assessments, assessment do |assessment_fields|
      = render partial: 'subjective_assessment_surveys/dimension_assessment',
          locals: {f: assessment_fields, assessment: assessment}


  .actions
    = f.submit 'Save', id: 'createAssessment'
